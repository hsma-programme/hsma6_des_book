{
	"name": "Quarto Codespaces",
	"image":"mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
	"remoteUser": "vscode",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
            "installChromium": true
        },
	"ghcr.io/rocker-org/devcontainer-features/r-apt:0": {},
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "chromium"
        }
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"REditorSupport.r",
                "ms-python.python",
                "ms-python.vscode-pylance",
				"MS-vsliveshare.vsliveshare",
				"ms-toolsai.jupyter",
				"grapecity.gc-excelviewer",
				"searking.preview-vscode"
			],
			"settings": {
				"r.rterm.option": [
					"--no-save",
					"--no-restore-data",
					"--quiet"
				],
				"r.useRenvLibPath": true
			}
		}

	},
        "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed and Requirements met'"
}
